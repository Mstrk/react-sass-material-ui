{
  "name": "react-sass-material-ui",
  "version": "0.0.0-development",
  "description": "A set of components for React, inspired on material design guide lines and preference for stylesheets.",
  "main": "src/index.js",
  "scripts": {
    "commit": "git-cz",
    "dev": "webpack-dev-server --progress",
    "test": "NODE_ENV=test mocha -w test/helpers/browser.js test/*.spec.js",
    "test:single": "NODE_ENV=test mocha test/helpers/browser.js test/*.spec.js",
    "prebuild": "rimraf dist",
    "build": "babel src --copy-files --out-dir dist",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mstrk/react-sass-material-ui.git"
  },
  "keywords": [
    "react",
    "react-component",
    "sass",
    "material design",
    "material-ui"
  ],
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "author": "Bruno Morgado <mstrk512@gmail.com> (http://www.meetbruno.eu/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mstrk/react-sass-material-ui/issues"
  },
  "homepage": "https://github.com/mstrk/react-sass-material-ui#readme",
  "dependencies": {
    "react": "15.4.1",
    "react-dom": "15.4.1"
  },
  "devDependencies": {
    "autoprefixer": "6.5.3",
    "babel-cli": "6.18.0",
    "babel-core": "6.18.2",
    "babel-loader": "6.2.8",
    "babel-plugin-react-transform": "2.0.2",
    "babel-preset-es2015": "6.18.0",
    "babel-preset-react": "6.16.0",
    "babel-preset-stage-2": "6.18.0",
    "chai": "3.5.0",
    "commitizen": "2.8.6",
    "css-loader": "0.26.0",
    "cz-conventional-changelog": "1.2.0",
    "enzyme": "2.6.0",
    "eslint": "3.10.2",
    "eslint-config-rallycoding": "3.1.0",
    "eslint-plugin-react": "6.7.1",
    "extract-text-webpack-plugin": "1.0.1",
    "ghooks": "1.3.2",
    "html-webpack-plugin": "2.24.1",
    "jsdom": "9.8.3",
    "mocha": "3.2.0",
    "node-sass": "3.13.0",
    "postcss-loader": "1.1.1",
    "react-addons-test-utils": "15.4.1",
    "react-transform-hmr": "1.0.4",
    "rimraf": "2.5.4",
    "sass-loader": "4.0.2",
    "semantic-release": "^6.3.2",
    "style-loader": "0.13.1",
    "webpack": "1.13.3",
    "webpack-dev-server": "1.16.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run test:single"
    }
  }
}
